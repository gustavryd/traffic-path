# Logging
LOG_LEVEL=INFO

# HTTP Server
HTTP_HOST=0.0.0.0
HTTP_PORT=8000
HTTP_AUTORELOAD=false

# PostgreSQL (only required if USE_POSTGRES=True in conf.py)
POSTGRES_DB=postgres
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_POOL_MIN=1
POSTGRES_POOL_MAX=10

# Couchbase (only required if USE_COUCHBASE=True in conf.py)
COUCHBASE_HOST=couchbase
COUCHBASE_USERNAME=user
COUCHBASE_PASSWORD=password
COUCHBASE_BUCKET=main
COUCHBASE_PROTOCOL=couchbase

# Temporal (only required if USE_TEMPORAL=True in conf.py)
TEMPORAL_HOST=temporal
TEMPORAL_PORT=7233
TEMPORAL_NAMESPACE=default
TEMPORAL_TASK_QUEUE=main-task-queue

# Twilio SMS (only required if USE_TWILIO=True in conf.py)
# Get these values from your Twilio Console: https://console.twilio.com/
# TWILIO_ACCOUNT_SID=your_account_sid_here
# TWILIO_AUTH_TOKEN=your_auth_token_here
# TWILIO_FROM_PHONE_NUMBER=+15551234567

# Authentication (only required if USE_AUTH=True in conf.py)
# AUTH_OIDC_JWK_URL=https://your-auth-provider.com/.well-known/jwks.json
# AUTH_OIDC_AUDIENCE=your-audience
# AUTH_OIDC_ISSUER=https://your-auth-provider.com/